Bootstrap: docker
From: ubuntu:22.04

%files
    app/src /opt/app/src
    app/Makefile /opt/app/Makefile

%post
    export DEBIAN_FRONTEND=noninteractive && \
    apt-get --yes update && \
    apt-get --yes upgrade && \
    apt-get --yes --no-install-recommends install \
        bash \
        gcc \
        make \
        libc6-dev && \
    apt-get --yes clean && \
    apt-get --yes autoremove && \
    rm -Rf /var/lib/apt/lists/*

    cd /opt/app && \
    make && \
    ln -s /opt/app/build/main /usr/local/bin/app
